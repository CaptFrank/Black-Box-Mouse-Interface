

	JSON Structures used for communication:

        IF(ROUTER_ACK)
            - router ack : {
                        MessageSize             : #####
    					TimeStamp"		        : #######,				// in seconds
						RunTime 			    : #######,				// in seconds
                        ACK                     : true,
                        CRC                     : #####
    					} // end of structure def.
        ENDIF

        IF(SENSOR_ENABLE_REPORT)
            - router sensor enabled report : {
                        MessageSize             : #####,
    					TimeStamp		        : #######,				// in seconds
						RunTime			        : #######,				// in seconds
                        EnabledSensors          : [
                                ####, ####, ####, ####,
                        ],
                        CRC                     : #####
    					} // end of structure def.
        ENDIF

        IF(ERROR)
            - error message : {
                        MessageSize             : #####
        				TimeStamp		        : #######,				// in seconds
						RunTime			        : #######,				// in seconds
                        SensorID                : #####,
                        Cause                   : "cause",
                        CRC                     : #####
    					} // end of structure def.
        ENDIF

		// This is used to get the status of the remote node.
		IF (DEBUG)
			- router status : { 
                        MessageSize             : #####
						GeneralStatus	        : [
							Status 			    : ###, 
							Errors 			    : ###,
							TimeStamp		    : #######,				// in seconds
							RunTime			    : #######,				// in seconds
							DebugEnable 		: ###,
							Power				: "AWAKE, SLEEP, IDLE, POWEROFF",
							MachineState		: "STATE", 
                            Battery             : #####
						]			
						WirelessStatus	        : [
							AckSent			    : ###,
							SentRequests 	    : ###,
							PacketCount 		: ###,
							RX				    : ###,
							TX				    : ###,
							GoodRX			    : ###,
							GoodTX			    : ###,
							Address			    : ###,
							Mode				: "END_POINT, ROUTER",
							RouterId			: "ID",
							RouterAddress	    : ###
						]
                        CRC                     : #####
						} // end of structure def.
		ENDIF

		IF (INIT)

            - netmap : {
                        MessageSize             : #####
                        TimeStamp               : #######
                        RunTime                 : #######
                        SensorInfo              :[ // Number of sensors
                            { SensorId: #### , Address : #### , Speed : #### , DataType: [float, int, double] , BufferSize : ##### , Battery : ####},
                            { SensorId: #### , Address : #### , Speed : #### , DataType: [float, int, double] , BufferSize : ##### , Battery : ####},
                            { SensorId: #### , Address : #### , Speed : #### , DataType: [float, int, double] , BufferSize : ##### , Battery : ####},
                            { SensorId: #### , Address : #### , Speed : #### , DataType: [float, int, double] , BufferSize : ##### , Battery : ####},
                            ]
                        CRC                     : #####
    					} // end of structure def.

            // This packet is sent as many times as there is sensors.
			- remote sensor channel info : {
                        MessageSize             : #####
						TimeStamp		        : #######				// in seconds
						RunTime			        : #######				// in seconds
						SensorID			    : ##		
						PacketID			    : ###
						Mode				    : "MODE"
						DataChannels		    : ###
						DataChannels Info:[
							{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
    						{ ChannelId: #### , ChannelType: [Digital / Analog]  },
							]
                        CRC                     : #####
						} // end of structure def.
		ENDIF

		IF(RUNNING)
			- sensor channel info : {
                MessageSize                     : #####
				TimeStamp       	            : #######				// in seconds
				RunTime			                : #######				// in seconds
				SensorID			            : ##		
				PacketID			            : ###
				Mode				            : "MODE"
				DataChannels		            : ###
				DataChannels Info:[
					{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
    				{ ChannelID: #### , ChannelValue: #####,  },
					]
                    CRC                        : #####
				} // end of structure def.

		ENDIF

